{
    "name": "@muslib/server",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "yarn run serve",
        "serve": "node ../../dist/@muslib/server/src/server.js",
        "serve-debug": "nodemon --inspect --watch ../../dist/@muslib/server",
        "build": "yarn run build-ts",
        "build-ts": "tsc",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
        "watch-ts": "tsc -w --preserveWatchOutput",
        "watch-node": "nodemon --watch ../../dist/@muslib/server",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
        "debug": "yarn run build && yarn run watch-debug"
    },
    "dependencies": {
        "@google-cloud/firestore": "^2.1.1",
        "@google-cloud/storage": "^2.5.0",
        "dotenv": "^8.0.0",
        "express": "^4.16.1",
        "firebase-admin": "8.0.0",
        "request": "2.88.0",
        "sharp": "^0.22.1",
        "cors": "2.8.5"
    },
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/node": "^12.0.4",
        "@types/dotenv": "^6.1.1",
        "@types/sharp": "0.22.1",
        "@types/cors": "2.8.5",
        "nodemon": "1.19.1"
    }
}
